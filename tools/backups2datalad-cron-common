#!/bin/bash
set -eu

export PS1='$ '
PS4='> '
#set -x

ds="$(realpath "$(dirname "$0")"/..)"
backup_root="$(dirname "$ds")"

source ~/.bashrc-miniconda
conda activate dandisets

cd "$ds"
chronic pip install -r tools/backups2datalad.req.txt

export DATALAD_LOG_LEVEL=WARNING  # otherwise too much noise

mkdir -p .git/tmp

set -x -o pipefail

function foreach_push_gitannex() {
	datalad -c datalad.ui.suppress-similar-results=off foreach-dataset -s -r -R $1 -J 5 --chpwd pwd --output-streams capture   git -C '{ds.path}' push github git-annex
}
